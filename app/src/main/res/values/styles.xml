<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="SwipeRefresh" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="Floating" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="WelcomeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="ColoredToolbarBarStyle" parent="@style/ThemeOverlay.MaterialComponents">
        <item name="android:textAppearance">@style/RobotoBoldTextStyle</item>
        <item name="android:textColor">@color/normal_text_color</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="homeAsUpIndicator">@drawable/ic_back</item>
        <item name="contentInsetStartWithNavigation">0.0dip</item>
        <item name="titleTextAppearance">@style/RobotoBoldTextStyle</item>
        <item name="titleTextColor">@color/normal_text_color</item>
    </style>

    <style name="NavigationItemTextStyle" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="fontFamily">@font/nunito_semi_bold</item>
    </style>

    <style name="NavigationItemTextStyle2" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="fontFamily">@font/nunito_semi_bold</item>
    </style>

    <style name="TabTextStyle2" parent="@style/TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="textAllCaps">false</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="BoldTextStyle" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="WelcomeScreenOverlayText">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="NormalTextStyle" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:color">@color/normal_text_color</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="fontFamily">@font/nunito_regular</item>
    </style>

    <style name="RobotoBoldTextStyle" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#C35F16</item>

        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>